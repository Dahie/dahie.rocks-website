<!doctype html>
<html lang="{{ site.language }}">
	<head>
		<title>{{ title }} | {{ site.name }}</title>
		<meta charset="utf-8" />
	{%- if site.environment == "production" %}
    <link rel="stylesheet" href="{{ '/css/main.min.css' | url }}">
    {%- else %}
    <link rel="stylesheet" href="{{ '/css/bulma.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    {%- endif %}
    {% include "metadata.njk" %}
	</head>
	<body class="is-preload">
    {{ content | safe }}

    {% getBundle "fontawesome" %}
    <script defer data-domain="dahie.rocks" src="https://plausible.io/js/plausible.outbound-links.js"></script>
	</body>
</html>
